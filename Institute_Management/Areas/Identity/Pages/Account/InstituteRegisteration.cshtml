@page
@model InstituteRegistrationModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>
<div class=" register">
    <div class="row">
        <div class="col-md-3 register-left">
            
            <section>
                <h3>Use another service to register.</h3>
                <hr />
                @{
                    if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {
                        <div>
                            <p>
                                There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">
                                    article
                                    about setting up this ASP.NET application to support logging in via external services
                                </a>.
                            </p>
                        </div>
                    }
                    else
                    {
                        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                            <div>
                                <p>
                                    @foreach (var provider in Model.ExternalLogins!)
                                    {
                                        <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                    }
                                </p>
                            </div>
                        </form>
                    }
                }
            </section>
        </div>

        <div class="col-md-8 register-right">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <h3 class="register-heading">Create an Account</h3>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div class="row register-form">
                        <div class="col-md-12 register-right">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Your Name *" asp-for="Input.Name" />
                                <span asp-validation-for="Input.Name"></span>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="Your Username *" asp-for="Input.Username" />
                                <span asp-validation-for="Input.Username"></span>
                            </div>
                              <div class="form-group">
                                <input type="text" class="form-control" placeholder="Your Phone Number *" asp-for="Input.PhoneNumber" />
                                <span asp-validation-for="Input.PhoneNumber"></span>
                            </div>
                           
                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="Your Email *" asp-for="Input.Email" />
                                <span asp-validation-for="Input.Email"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Name of Institute *" asp-for="Input.InstituteName" />
                                <span asp-validation-for="Input.InstituteName"></span>
                            </div>
                            <div class="form-group">
                                <input  class="form-control" placeholder="Enter Password *" asp-for="Input.Password" />
                                <span asp-validation-for="Input.Password"></span>
                            </div>
                            <div class="form-group">
                                <input  class="form-control" placeholder="Confirm Password *" asp-for="Input.ConfirmPassword" />
                                <span asp-validation-for="Input.Password"></span>
                            </div>
                            
                            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>

        

    </div>
</div>














